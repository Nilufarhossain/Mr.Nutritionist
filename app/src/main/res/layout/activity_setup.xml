<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=" com.example.mrnuitritionistchat.SetupActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/setup_profile_image"
        android:layout_width="110dp"
        android:layout_height="153dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="145dp"
        android:layout_marginTop="107dp"
        android:layout_marginEnd="156dp"
        android:layout_marginBottom="470dp"
        android:src="@drawable/profile"
        app:civ_border_width="2dp" />

    <EditText
        android:id="@+id/setup_username"
        android:layout_width="308dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="349dp"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="337dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="User Name"
        android:drawableStart="@drawable/username"
        android:inputType="textMultiLine"
        android:textColorHint="#4A4545" />

    <EditText
        android:id="@+id/setup_full_name"
        android:layout_width="304dp"
        android:layout_height="46dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="46dp"
        android:layout_marginTop="426dp"
        android:layout_marginEnd="61dp"
        android:layout_marginBottom="259dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Full Name"
        android:inputType="textMultiLine"
        android:textColorHint="#514747"
        android:drawableStart="@drawable/name"/>

    <EditText
        android:id="@+id/setup_country_name"
        android:layout_width="306dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="43dp"
        android:layout_marginTop="510dp"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="176dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Country"
        android:drawableStart="@drawable/country"
        android:inputType="textMultiLine"
        android:textColorHint="#504747" />

    <Button
        android:id="@+id/setup_information_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="148dp"
        android:layout_marginTop="616dp"
        android:layout_marginEnd="162dp"
        android:layout_marginBottom="67dp"
        android:text="Save"
        android:textColor="@color/colorBlack" />


</RelativeLayout>